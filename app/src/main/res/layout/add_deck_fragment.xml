<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="deckForm"
                  type="br.com.spellnet.decklist.view.AddDeckForm"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:paddingTop="8dp">

        <EditText
                android:id="@+id/deck_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="8dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:text="@={deckForm.name}"
                android:hint="Deck Name"
        />

        <EditText
                android:id="@+id/deck_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deck_name"
                android:layout_margin="8dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:text="@={deckForm.url}"
                android:hint="Past deck URL"
        />

        <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deck_url"
                android:layout_margin="8dp"
                android:text="Save Deck"
        />
    </android.support.constraint.ConstraintLayout>
</layout>